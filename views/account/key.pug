    script.
      window.seed = {
        token : "!{token}"
      }
      
    script.
      if (window.seed.token) {
        store.set('breadboard_token', window.seed.token);
      }
      
      var token = store.get('breadboard_token');
      
    title Breadboard - Community Edition
  body
    .container
      header.navbar.navbar-light.navbar-static-top
        a.navbar-brand Breadboard
      
      p
        .card
          .card-header Key
          .card-block
            p.card-text Send this header with your requests
            p.card-text
              code Authorization: Bearer #{key}
            p.card-text Remember the key and keep it secret.